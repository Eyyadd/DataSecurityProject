@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="display-5 text-danger">Oops! Something went wrong.</h1>
    <p class="lead">We're working to fix the problem. Please try again later.</p>

    @if (Model?.RequestId != null)
    {
        <p class="text-muted">Request ID: <code>@Model.RequestId</code></p>
    }

    <a class="btn btn-secondary mt-3" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
